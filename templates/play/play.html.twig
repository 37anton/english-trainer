{% extends 'base.html.twig' %}

{% block title %}Hello PlayController!
{% endblock %}

{% block body %}

	<div class="flex justify-center items-center h-screen">
		<div class="w-1/2 space-y-4">

			<button id="startGameButton" type="button" class="bg-purple-500 hover:bg-purple-600 text-white font-bold py-2 px-4 rounded shadow-lg transition duration-300 ease-in-out">
				Démarrer la partie
			</button>


			<div id="wordToTranslate"></div>

			{{ form_start(form, {'attr': {'class': 'flex flex-col items-center'}}) }}
			{{ form_row(form.translatedWord, {'attr': {'class': 'w-3/4 p-2 border border-gray-300 rounded shadow-sm focus:outline-none focus:border-blue-500'}}) }}

			<button id="verifyButton" type="submit" class="bg-indigo-500 hover:bg-indigo-600 text-white font-bold py-2 px-4 rounded shadow-lg transition duration-300 ease-in-out">
				Vérifier
			</button>
			{{ form_end(form) }}
		</div>
	</div>

{% endblock %}
